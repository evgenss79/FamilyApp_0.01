platform :ios, '13.0'

# Disable CocoaPods analytics to speed up installation
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Define workspace mapping for Xcode
project 'Runner', {
  'Debug'   => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Use frameworks and modular headers for all pods
use_frameworks!
use_modular_headers!

# Подгружаем вспомогательный скрипт Flutter для iOS, который определяет flutter_install_all_ios_pods
flutter_ios_pod_helper_path = File.join(__dir__, 'Flutter', 'podhelper.rb')
load flutter_ios_pod_helper_path if File.exist?(flutter_ios_pod_helper_path)

# Install Flutter and plugin pods
target 'Runner' do
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

# Post‑install hook: убираем флаг gmodules и выставляем минимальный таргет 13.0
post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Remove unsupported '-gmodules' flag from OTHER_CFLAGS
      other_cflags = config.build_settings['OTHER_CFLAGS']
      if other_cflags && other_cflags.include?('gmodules')
        config.build_settings['OTHER_CFLAGS'] = other_cflags.gsub('gmodules', '')
      end
      # Ensure each pod has a minimum deployment target of 13.0
      if config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f < 13.0
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      end
    end
    # Настройки сборки Flutter
    flutter_additional_ios_build_settings(target)
  end
end
